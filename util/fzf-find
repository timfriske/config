#!/usr/bin/env bash
#
# Find file system objects w/ Find for Fzf
# ========================================
# Tim Friske <me@tifr.de>
#
# Dependencies::
#   _Bash_, _Cat_

shopt -os nounset pipefail errexit errtrace

function print_help {
  1>&2 cat \
<<'HELP'
Help
====
Find file system objects with _Find_ for _Fzf_.
HELP
}
}

function fzf_find {
  if [[ "${1:-}" == '--help' ]]; then
    print_help
    exit
  fi
}

fzf_find "$@"
