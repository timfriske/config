#!/usr/bin/env bash

# TAR Tape Archive extraction
# ===========================
# Tim Friske <me@tifr.de>

shopt -os nounset pipefail errexit errtrace

declare -r prog_name="${0##*/}"

function untar {
  if [[ "$#" != 1 || ! -f "$1" ]]; then
    echo "usage: $prog_name <file>"
    exit 1
  fi
}

untar "$@"
