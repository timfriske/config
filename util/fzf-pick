#!/usr/bin/env bash
#
# Fuzzy-find and pick records w/ Fzf
# ==================================
# Tim Friske <me@tifr.de>
#
# Dependencies::
#   _Bash_, _Cat_

shopt -os nounset pipefail errexit errtrace

function print_help {
  1>&2 cat \
<<'HELP'
HELP
}

function fzf_pick {
  if [[ "${1:-}" == '--help' ]]; then
    print_help
    exit
  fi
}

fzf_pick "$@"
