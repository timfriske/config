#!/usr/bin/env sh

# Git Commit command
# ==================
# Tim Friske <me@tifr.de>
#
# Dependencies:
#   env:: Env command.
#   git-commit:: Git Commit command.
#   sh:: POSIX-compatible shell.

set -o errexit -o nounset

main() {
  local commit="${1:-HEAD}"
  shift $(($#-($#${1+-1})))
  git commit --fixup="$commit" --edit ${GIT_X_SIGNOFF:-} "$@"
}

main "$@"
