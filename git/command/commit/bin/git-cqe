#!/usr/bin/env sh

# Git Commit command
# ==================
# Tim Friske <me@tifr.de>
#
# Deps:: env, git-commit, sh

set -o errexit -o nounset

main() {
  local commit="${1:-HEAD~1}"
  local of_commit="${2:-${commit}}"
  shift $(($#-($#${1+-1}${2+-1})))
  git commit --squash="${commit}" --edit \
    --reedit-message="${of_commit}" ${GIT_X_SIGNOFF:-} --reset-author \
    "${@}"
}

main "${@}"
