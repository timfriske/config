#!/usr/bin/env sh

# Git Commit command
# ==================
# Tim Friske <me@tifr.de>
#
# Dependencies:
#   env:: Env command.
#   git-commit:: Git Commit command.
#   sh:: POSIX-compatible shell.

set -o errexit -o nounset

main() {
  local of_commit="${1:-HEAD}"
  shift $(($#-($#${1+-1})))
  git commit --no-edit --reuse-message="$of_commit" ${GIT_X_SIGNOFF:-} \
    --reset-author "$@"
}

main "$@"
