#!/usr/bin/env sh

# Git Log command
# ===============
# Tim Friske <me@tifr.de>
#
# Dependencies:
#   env:: Env command.
#   git-log:: Git Log command.
#   sh:: POSIX-compatible shell.

set -o errexit -o nounset

# Log commits touching file.
#
main() {
  local commit="${1:-HEAD}"
  local file="${2:-}"
  shift $(($#-($#${1+-1}${2+-1})))
  cd "${GIT_PREFIX:-.}"
  git log --follow --oneline --decorate=auto "$commit" -- "$file"
}

main "${@}"
