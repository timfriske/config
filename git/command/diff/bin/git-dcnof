#!/usr/bin/env sh

# Git Diff command
# ================
# Tim Friske <me@tifr.de>
#
# Dependencies:
#   env:: Env command.
#   git-diff:: Git Diff command.
#   sh:: POSIX-compatible shell.

set -o errexit -o nounset

main() {
  local filter="${1:-ACDMRTUXB}"
  shift $(($#-($#${1+-1})))
  cd "${GIT_PREFIX:-.}"
  git diff --cached --name-only --diff-filter="$filter" "$@"
}

main "$@"
