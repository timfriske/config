#!/usr/bin/env sh

# Git Edit command
# ================
# Tim Friske <me@tifr.de>
#
# Dependencies:
#   env:: Env command.
#   git-config:: Git Config command.
#   sh:: POSIX-compatible shell.

set -o errexit -o nounset

main() {
  local editor="$(git config core.editor)"
  ${editor:-${VISUAL:-${EDITOR:-true}}} "${@}"
}

main "${@}"
