#!/usr/bin/sh

# Git Stash command
# =================
# Tim Friske <me@tifr.de>
#
# Dependencies:
#   git-stash:: Git Stash command.
#   sh:: POSIX-compatible shell.

set -o errexit -o nounset

main() {
  local filter="${1:-ACDMRTUXB}"
  shift $(($#-($#${1+-1})))
  git stash show --name-only --diff-filter="$filter" "$@"
}

main "$@"
